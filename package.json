{
  "name": "airlight-config",
  "description": "Shared configurations to use with combine of each other to get cleaner, better, reusable, secure and effecient codebase",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "lint": "smartlint",
    "semantic-release": "pnpm -r --workspace-concurrency=1 exec semantic-release -e semantic-release-monorepo-esm",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dalisoft/airlight.git"
  },
  "keywords": ["biome", "eslint", "config"],
  "author": "dalisoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dalisoft/airlight/issues"
  },
  "homepage": "https://github.com/dalisoft/airlight#readme",
  "devDependencies": {
    "@biomejs/biome": "1.4.1-nightly.d869a33",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-lerna-scopes": "^18.4.4",
    "@stoplight/spectral-cli": "^6.11.0",
    "biome-config-airlight": "workspace:*",
    "dprint": "^0.45.0",
    "eslint-config-airlight-node": "workspace:^",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "oxlint": "^0.0.22",
    "semantic-release": "^22.0.12",
    "semantic-release-monorepo-esm": "1.0.12",
    "smartlint": "workspace:^",
    "typescript": "^5.3.3"
  }
}

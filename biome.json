{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "extends": ["biome-config-airlight"],
  "files": {
    "includes": [
      "**",
      "!**/scripts",
      "!**/.release-me",
      "!**/oxlintrc.json",
      "!**/bench",
      "!**/examples"
    ],
    "ignoreUnknown": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "rules": {
      "style": {
        "useNamingConvention": "off",
        "noCommonJs": "off"
      },
      "nursery": {
        "noSecrets": "off"
      }
    }
  }
}
